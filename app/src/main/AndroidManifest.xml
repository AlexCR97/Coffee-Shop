<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.coffeeshop">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true">
        <activity
            android:name=".userlayer.activities.ViewSaleActivity"
            android:theme="@style/AppTheme"/>
        <activity
            android:name=".userlayer.activities.UserViewProductActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".userlayer.activities.UserViewCategoryProductsActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".userlayer.activities.ViewProductActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".userlayer.activities.ViewCategoryProductsActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".userlayer.activities.ViewUserActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".userlayer.activities.AdminActivity"
            android:label="@string/title_activity_admin"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".userlayer.activities.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".userlayer.activities.LoginActivity"
            android:theme="@style/SplashTheme" />
        <activity
            android:name=".userlayer.activities.SignUpActivity"
            android:theme="@style/SplashTheme" />
        <activity
            android:name=".userlayer.activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme" />
    </application>

</manifest>