<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".userlayer.activities.AdminActivity">

    <FrameLayout
        android:id="@+id/fragmentContainerAdmin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/navigationAdmin"/>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigationAdmin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorText1"
        app:menu="@menu/navigation_admin" />

</RelativeLayout>