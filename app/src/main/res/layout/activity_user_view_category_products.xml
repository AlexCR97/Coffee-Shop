<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".userlayer.activities.UserViewCategoryProductsActivity">

    <!-- HEADER -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@drawable/background_02">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Productos"
            android:textColor="@color/colorText1"
            android:textSize="40sp"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/textViewCategoryNameUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre de la categoria"
            android:textColor="@color/colorText1"
            android:textSize="25sp"
            android:textAlignment="center"/>

    </LinearLayout>

    <!-- CONTENT -->
    <GridView
        android:id="@+id/gridViewProducts"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:verticalSpacing="15dp"
        android:numColumns="2"/>

</LinearLayout>