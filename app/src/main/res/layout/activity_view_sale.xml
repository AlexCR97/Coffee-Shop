<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".userlayer.activities.ViewSaleActivity">

    <TextView
        android:id="@+id/textViewViewSaleNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:text="0000000000"
        android:textAlignment="center"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/textViewViewSaleUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:text="Usuario"
        android:textAlignment="center"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/textViewViewSaleDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:text="Fecha"
        android:textAlignment="center"
        android:textSize="20sp"/>

    <ListView
        android:id="@+id/listViewSaleProducts"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginTop="25dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="end"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text="Total: "
            android:textSize="22sp"
            android:textAlignment="textStart"/>

        <TextView
            android:id="@+id/textViewViewSaleTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text="$0"
            android:textSize="22sp"
            android:textAlignment="textEnd"/>

    </LinearLayout>

</LinearLayout>